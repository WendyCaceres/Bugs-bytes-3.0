<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaUsuarioActivity">

    <LinearLayout
        android:id="@+id/imagen_de_fondo"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/asistentefinanciero">
    </LinearLayout>

    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="@+id/imagen_de_fondo"
        app:layout_constraintStart_toStartOf="@+id/imagen_de_fondo"
        app:layout_constraintEnd_toEndOf="@+id/imagen_de_fondo"
        app:layout_constraintBottom_toBottomOf="@+id/imagen_de_fondo"
        android:layout_marginBottom="40dp"
        android:src="@drawable/account_circle_24dp_e8eaed_fill0_wght400_grad0_opsz24"
        android:contentDescription="Editar perfil"
        android:scaleType="centerCrop"
        android:background="@drawable/circel_shape"/>

    <Button
        android:id="@+id/boton_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imagen_de_fondo"
        app:layout_constraintEnd_toEndOf="@id/imagen_de_fondo"
        app:layout_constraintTop_toTopOf="@id/imagen_de_fondo"
        android:layout_marginTop="160dp"
        app:layout_constraintBottom_toBottomOf="@id/imagen_de_fondo"
        android:text="EDITAR"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imagen_de_fondo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:text="Nombre Completo"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/nombre_completo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:hint="Nombre Completo"
        android:textColorHint="#4F4C4C"
        app:endIconMode="clear_text"
        app:hintTextColor="#723185"
        app:cursorColor="#723185"
        app:helperTextTextColor="#ff0000"
        app:boxStrokeColor="#723185"
        app:errorTextColor="#ff0000"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/imagen_de_fondo">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:maxLength="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/nombre_completo"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nombre_completo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Correo Electronico"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:hint="E-MAIL"
        android:textColorHint="#646464"
        app:endIconMode="clear_text"
        app:hintTextColor="#723185"
        app:cursorColor="#723185"
        app:helperTextTextColor="#ff0000"
        app:boxStrokeColor="#723185"
        app:errorTextColor="#ff0000"
        app:counterOverflowTextColor="@color/black"
        app:counterTextColor="@color/black"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/nombre_completo">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText2"
            android:maxLength="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Numero de Telefono"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/numero_de_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:hint="Numero de telefono"
        android:textColorHint="#646464"
        app:endIconMode="clear_text"
        app:hintTextColor="#723185"
        app:cursorColor="#723185"
        app:helperTextTextColor="#ff0000"
        app:boxStrokeColor="#723185"
        app:errorTextColor="#ff0000"
        app:counterOverflowTextColor="@color/black"
        app:counterTextColor="@color/black"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/email">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText3"
            android:maxLength="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/numero_de_telefono"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="Fecha de nacimiento"
        android:textSize="18sp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/fecha_de_nacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:hint="DD/YY/MM"
        android:textColorHint="#646464"
        app:endIconMode="clear_text"
        app:hintTextColor="#723185"
        app:cursorColor="#723185"
        app:helperTextTextColor="#ff0000"
        app:boxStrokeColor="#723185"
        app:errorTextColor="#ff0000"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/numero_de_telefono">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#9000FF">
        <ImageButton
            android:id="@+id/botoninicio"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:contentDescription="Editar parqueo"
            android:background="#9000FF"/>
        <ImageButton
            android:id="@+id/botonestadistica"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/analytics_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:contentDescription="Editar parqueo"
            android:background="#9000FF"/>
        <ImageButton
            android:id="@+id/botonperfil"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:src="@drawable/person_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:contentDescription="Editar parqueo"
            android:background="#9000FF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
