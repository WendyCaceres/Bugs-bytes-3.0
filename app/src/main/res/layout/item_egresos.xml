<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/nombreEgreso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="2"
        android:text="Nombre del egreso"/>

    <TextView
        android:id="@+id/tipoEgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_weight="2"
        android:text="Tipo del egreso"/>


    <TextView
        android:id="@+id/montoEgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="5bs"
        android:paddingEnd="8dp"/>


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/delete_24dp_e8eaed_fill0_wght400_grad0_opsz24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="BorrarEgreso"/>







</LinearLayout>